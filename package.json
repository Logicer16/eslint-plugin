{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@logicer/eslint-plugin",
  "version": "5.0.0",
  "description": "Logicer's ESLint Base Configuration as a Plugin",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "main": "dist/src/index.js",
  "type": "module",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "style": "npm run lint && npm run prettier",
    "lint": "eslint . --fix --cache",
    "lint:ci": "eslint . --cache",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "type-coverage": "type-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Logicer16/eslint-plugin.git"
  },
  "author": "logicer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Logicer16/eslint-plugin/issues"
  },
  "homepage": "https://github.com/Logicer16/eslint-plugin#readme",
  "engines": {
    "node": "^20.10.0"
  },
  "devDependencies": {
    "@logicer/eslint-plugin": "file:.",
    "@logicer/prettier-config": "^2.0.0",
    "@logicer/tsconfig": "^4.0.0",
    "@types/eslint": "^8.56.2",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.8.7",
    "eslint": "^8.56.0",
    "eslint-plugin-eslint-plugin": "^5.1.0",
    "prettier": "3.1.1",
    "ts-plugin-type-coverage": "^2.26.4",
    "type-coverage": "^2.27.0",
    "typescript": "^5.0.4"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "strict": true,
    "ignoreCatch": true,
    "reportSemanticError": true
  },
  "optionalDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.1.0",
    "@eslint/js": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsdoc": "^48.0.4",
    "eslint-plugin-json-schema-validator": "^4.8.3",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^2.1.2",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-toml": "^0.9.2",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-yml": "^1.12.2",
    "svelte-eslint-parser": "^0.33.1"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8.23.0",
    "eslint-import-resolver-typescript": "^3.6.1"
  },
  "peerDependenciesMeta": {
    "eslint-import-resolver-typescript": {
      "optional": true
    }
  }
}
